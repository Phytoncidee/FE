<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".MyBookmarksActivity"
android:background="@color/green"
android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="30dp"
            android:layout_marginTop="30dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="즐겨찾기"
                android:textColor="@color/white"
                android:fontFamily="@font/nanum_square_round_eb"
                android:textSize="25dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_favorites"
                android:layout_gravity="end"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/round_background_white"
            android:orientation="vertical"
            android:layout_weight="1"
            android:padding="10dp">

            <!-- 카테고리 버튼 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">
                <Button
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="전체"
                    android:textColor="@color/white"
                    android:backgroundTint="@color/navy"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:textSize="12dp"
                    android:padding="0dp"/>
                <Button
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="산"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/lightgray"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:textSize="12dp"
                    android:padding="0dp"/>
                <Button
                    android:layout_width="65dp"
                    android:layout_height="wrap_content"
                    android:text="음식점"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/lightgray"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:textSize="12dp"
                    android:padding="0dp"/>
                <Button
                    android:layout_width="55dp"
                    android:layout_height="wrap_content"
                    android:text="숙박"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/lightgray"
                    android:layout_marginRight="10dp"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:textSize="12dp"
                    android:padding="0dp"/>
                <Button
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:text="등산용품"
                    android:textColor="@color/black"
                    android:backgroundTint="@color/lightgray"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:textSize="12dp"
                    android:padding="0dp"/>

            </LinearLayout>



            <!-- 예시 화면(임시) -->

            <!-- 예시 식당 -->

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@color/backgroundyellow">

                <ImageView
                    android:id="@+id/ImgRestaurant"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/xx_exrestaurant"
                    android:padding="5dp"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="쎄쎄"
                        android:textSize="20dp"
                        android:fontFamily="@font/nanum_square_round_eb"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:id="@+id/restaurantName"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 서울 도봉구 삼양로 532"
                        android:drawableLeft="@drawable/icon_address"
                        android:textSize="17dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/restaurantAdd"/>
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/btn_star_big_on"
                    android:backgroundTint="@color/backgroundyellow"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:id="@+id/BtnResBookmark"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="10dp"
                android:background="@color/gray"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="10dp"/>

            <!-- 예시 숙박 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundyellow">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/xx_exaccommodation"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="리치 다이아몬드 호텔"
                        android:textSize="20dp"
                        android:fontFamily="@font/nanum_square_round_eb"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 서울 강북구 삼양로 500-18"
                        android:drawableLeft="@drawable/icon_address"
                        android:textSize="17dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"/>
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/btn_star_big_on"
                    android:backgroundTint="@color/backgroundyellow"
                    android:scaleType="fitCenter"
                    android:padding="10dp"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="10dp"
                android:background="@color/gray"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="10dp"/>

            <!-- 예시 산 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/backgroundyellow">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center_vertical"
                    android:id="@+id/mntImg"
                    android:src="@drawable/xx_exmountain"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="한라산"
                            android:textSize="16dp"
                            android:fontFamily="@font/nanum_square_round_eb"
                            android:layout_marginBottom="10dp"
                            android:id="@+id/mntiname"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1,947"
                            android:textSize="16dp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/nanum_square_round_b"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/mntihigh" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="m"
                            android:textSize="15dp"
                            android:textColor="@color/gray"
                            android:fontFamily="@font/nanum_square_round_b"
                            android:layout_marginBottom="10dp"/>
                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=" 제주 서귀포시 토평동 산15-1"
                        android:textSize="14dp"
                        android:textColor="@color/gray"
                        android:fontFamily="@font/nanum_square_round_b"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:id="@+id/mntiadd"
                        android:maxLines="1"
                        android:ellipsize="end" />
                </LinearLayout>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/btn_star_big_on"
                    android:backgroundTint="@color/backgroundyellow"
                    android:scaleType="fitCenter"
                    android:padding="10dp"
                    android:id="@+id/btnMBookmark"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="10dp"
                android:background="@color/gray"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="10dp"/>

            <!-- 예시 등산용품점 -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:background="@color/backgroundyellow">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:text="예스 마운틴"
                    android:textSize="20dp"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:id="@+id/eShopName"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/btn_star_big_on"
                    android:backgroundTint="@color/white"
                    android:scaleType="fitCenter"
                    android:id="@+id/BtnESBookmark"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:padding="10dp"
                android:background="@color/gray"
                android:layout_gravity="center"
                android:layout_marginVertical="15dp"
                android:layout_marginHorizontal="10dp"/>






            <!-- 카테고리 별 즐겨찾기 목록 -->
<!--            <androidx.recyclerview.widget.RecyclerView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="match_parent"-->
<!--                android:id="@+id/favoritesRecyclerView" />-->
        </LinearLayout>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>