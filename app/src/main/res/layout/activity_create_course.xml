<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateCourseActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/green"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="관광 코스 생성"
                android:textColor="@color/white"
                android:textSize="30dp"
                android:fontFamily="@font/nanum_square_round_eb"
                android:layout_marginTop="20dp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@drawable/round_background_white"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- 시작 시간 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="시작 시간"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:text=" 시  "
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:text=" 분"
                    android:textSize="20dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/icon_clock_dialog" />
            </LinearLayout>

            <!-- 종료 시간 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="종료 시간"
                android:textSize="20dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:text=" 시  "
                    android:textSize="20dp" />

                <EditText
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edittext_border2" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:text=" 분"
                    android:textSize="20dp" />

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/icon_clock_dialog" />
            </LinearLayout>


            <!-- 등산 코스 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="등산 코스"
                android:textSize="20dp" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="20dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="초보자" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="중급자" />

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="숙련자" />
            </RadioGroup>


            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="즐겨찾기 포함" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:backgroundTint="@color/white"
                android:src="@drawable/button_create_course" />


            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#e0e0e0"
                android:padding="10dp" />


            <!-- 코스 생성 결과 -->
            <!-- 최종 코스 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="최종 코스"
                android:textSize="20dp" />

            <!-- 입력 시간에 따라 타임라인 결과 다르게 표시하는 로직 필요.. 일단 예시 하드 코딩 -->
            <!-- 일정 1 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:text="10:30" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/etc_timeline_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:text="아침 식사" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/icon_arrow_dropdown" />
            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:background="#e0e0e0" />


            <!-- 일정 2 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:text="12:30" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/etc_timeline_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:text="한라산" />

                <ImageButton
                    android:layout_width="70dp"
                    android:layout_height="22dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/button_move_hcource" />
            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:background="#e0e0e0" />


            <!-- 일정 3 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:text="14:30" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/etc_timeline_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:text="점심 식사" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/icon_arrow_dropdown" />
            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:background="#e0e0e0" />


            <!-- 일정 4 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:text="16:30" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/etc_timeline_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:text="제부도 카페" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/icon_arrow_dropdown" />
            </LinearLayout>

            <View
                android:layout_width="3dp"
                android:layout_height="30dp"
                android:layout_marginLeft="80dp"
                android:background="#e0e0e0" />


            <!-- 일정 4 -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:text="18:30" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:src="@drawable/etc_timeline_circle" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:text="저녁 식사" />

                <ImageButton
                    android:layout_width="30dp"
                    android:layout_height="20dp"
                    android:backgroundTint="@color/white"
                    android:src="@drawable/icon_arrow_dropdown" />
            </LinearLayout>


            <!-- 경로 보기 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/nanum_square_round_eb"
                android:text="경로 보기"
                android:textSize="20dp" />

            <!-- 경로 지도 -->
            <!-- 임시 이미지, 추후 지도에 경로 표시하도록 변경 -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/etc_default_image" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="#e0e0e0"
                android:padding="10dp" />


            <!-- 경로 저장 -->

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/edittext_border2"
                android:drawableLeft="@drawable/icon_write_coursename"
                android:hint="생성할 코스 이름을 입력하세요." />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/white"
                android:src="@drawable/button_save_course" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
