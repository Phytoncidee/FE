<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/root"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/backgroundyellow">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/etc_default_image"
            android:id="@+id/mntImg"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="산 이름"
                    android:textSize="16dp"
                    android:fontFamily="@font/nanum_square_round_eb"
                    android:layout_marginBottom="10dp"
                    android:id="@+id/mntiname"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="산 높이"
                    android:textSize="16dp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/mntihigh" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="m"
                    android:textSize="15dp"
                    android:textColor="@color/gray"
                    android:fontFamily="@font/nanum_square_round_b"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 산 주소~~~~~~~~~~~~~"
                android:textSize="14dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_round_b"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/mntiadd"
                android:maxLines="1"
                android:ellipsize="end" />
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_off"
            android:backgroundTint="@color/backgroundyellow"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:id="@+id/btnMBookmark"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

