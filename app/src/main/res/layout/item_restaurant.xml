<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgroundyellow"
    android:layout_marginHorizontal="20dp"
    android:layout_marginVertical="10dp"
    android:id="@+id/root">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ImgRestaurant"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/etc_default_image" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="20dp"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="가게 이름"
                android:textSize="20dp"
                android:fontFamily="@font/nanum_square_round_eb"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp"
                android:id="@+id/restaurantName"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 음식점 주소"
                android:drawableLeft="@drawable/icon_address"
                android:textSize="17dp"
                android:textColor="@color/gray"
                android:fontFamily="@font/nanum_square_round_b"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:id="@+id/restaurantAdd"/>
        </LinearLayout>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/btn_star_big_off"
            android:backgroundTint="@color/backgroundyellow"
            android:scaleType="fitCenter"
            android:padding="10dp"
            android:id="@+id/BtnResBookmark"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

